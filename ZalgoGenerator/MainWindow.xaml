<Window x:Class="ZalgoGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZalgoGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="ZalgoEntry" Grid.Row="0" Width="400" Height="50" BorderBrush="DimGray"/>
        <TextBlock x:Name="TestingText" KeyDown="TestingText_KeyDown" Width="400" TextWrapping="Wrap" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Width="400">
            <Button x:Name="ZalgoGenerate" Click="ZalgoGenerate_Click" Height="60" Width="180" Grid.Row="2" Content="Click" HorizontalAlignment="Center" Margin="10"/>
            <Button x:Name="ZalgoCopy" Click="ZalgoCopy_Click" Height="60" Width="180" Grid.Row="2" HorizontalAlignment="Center" Content="Copy" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
